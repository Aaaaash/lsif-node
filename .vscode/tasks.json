{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"dependsOn": [
				"compile:tsc-lsif",
				"compile:npm-lsif"
			],
			"group": {
				"kind": "build"
			},
			"problemMatcher": []
		},
		{
			"label": "compile:tsc-lsif",
			"type": "shell",
			"command": "npm run compile:tsc-lsif",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "compile:npm-lsif",
			"type": "shell",
			"command": "npm run compile:npm-lsif",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "watch",
			"dependsOn": [
				"watch:tsc-lsif",
				"watch:npm-lsif"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "watch:tsc-lsif",
			"type": "shell",
			"command": "npm run watch:tsc-lsif",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "always"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "watch:npm-lsif",
			"type": "shell",
			"command": "npm run watch:npm-lsif",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "always"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "TypeScript Sample",
			"type": "shell",
			"command": "npm run lsif-ts",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "JavaScript Sample",
			"type": "shell",
			"command": "npm run lsif-js",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "TypeScript Sample Linking",
			"type": "shell",
			"command": "npm run lsif-ts-all",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}